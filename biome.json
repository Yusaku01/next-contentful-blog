{
	"$schema": "https://biomejs.dev/schemas/2.3.8/schema.json",
	"files": {
		"includes": [
			"app/**/*.{js,jsx,ts,tsx}",
			"lib/**/*.{js,jsx,ts,tsx}",
			"components/**/*.{js,jsx,ts,tsx}",
			"pages/**/*.{js,jsx,ts,tsx}",
			"tailwind.config.ts",
			"next.config.js",
			"postcss.config.js",
			"tsconfig.json",
			"package.json",
			"biome.json"
		]
	},
	"formatter": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	}
}
